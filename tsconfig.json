{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": ["styled-components-react-native"],
    "paths": {
      "components/*": ["./src/components/*"],
      "screens/*": ["./src/screens/*"],
